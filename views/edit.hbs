<form action="./?_method=PUT" method="POST">
  <div class="container" style="width: 50rem;">
    <div class="row justify-content-start  text-center mt-4">
      <h3 style="color: grey;">請輸入您的支出</h3>
    </div>

    <div class="row mt-4 justify-content-start">
      <div class="form-inline">
        <label class="ml-3 mr-2" for="exampleInputEmail1">品項名稱</label>
        <input class="ml-3" type="name" class="form-control form-control-lg" id="exampleInputEmail1"
          aria-describedby="emailHelp" name="name" placeholder=" please input the item name..." style="width: 600px;"
          required='true' value={{record.name}}>
      </div>
    </div>

    <div class="row mt-4 justify-content-start">
      <div class="form-inline">
        <label class="ml-3" for="exampleFormControlInput1">支出種類</label>
        <select class="form-control ml-4" id="exampleFormControlSelect1" name="category" required='true'>
          <option>{{ record.category }}</option>
          <option>home</option>
          <option>traffic</option>
          <option>entertainment</option>
          <option>food</option>
          <option>else</option>
        </select>
      </div>
    </div>

    <div class="form-group row mt-4 justify-content-start">
      <label for="example-date-input" class="col-1 col-form-label mr-4">Date</label>
      <div class="col-10">
        <input class="form-control" type="date" id="example-date-input" name="date" required='true'
          value={{record.date}}>
      </div>
    </div>

    <div class="form-group row row mt-4 justify-content-start">
      <label for="example-number-input" class="mr-4 col-1 col-form-label">金額</label>
      <div class="col-10">
        <input class="form-control" type="number" id="example-number-input" name="amount" required='true'
          value={{record.amount}}>
      </div>
    </div>

    <div class="row mt-4 justify-content-end">
      <button type="submit" class="btn btn-success"> 修改 </button>
    </div>
  </div>
  </div>
</form>